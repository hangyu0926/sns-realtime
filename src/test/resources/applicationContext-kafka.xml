                <entry key="avroSchema">
                    <value>
                        <![CDATA[
                                {"namespace": "MERCHANTAUDIT.ma_store_baseinfo",
                                 "type": "record",
                                 "name": "ma_store_baseinfo",
                                 "fields": [
                                     {"name": "STOREID", "type": "int"},
                                     {"name": "MERCHANTID", "type": "int"},
